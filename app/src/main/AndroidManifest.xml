<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.insurancevala">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.app.insurancevala.App"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:allowBackup"
        android:largeHeap="true">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="com.app.insurancevala.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.Login.WelcomeActivity"
            android:exported="true"/>
        <activity android:name=".activity.Login.LoginActivity"
            android:exported="true"/>
        <activity android:name=".activity.Login.RegistrationActivity"
            android:exported="true"/>
        <activity android:name=".activity.Login.ForgotpasswordActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="true"/>
        <activity android:name=".activity.Login.ResetNewPasswordActivity"
            android:exported="true"/>

        <activity android:name=".activity.DashBoard.HomeActivity"
            android:exported="true"
            android:theme="@style/AppThemeHome">
        </activity>

        <activity android:name=".activity.DashBoard.HomeInnerListActivity"
            android:exported="true"/>

        <activity android:name=".activity.Lead.LeadDashboardActivity"
            android:theme="@style/AppThemeHome"
            android:exported="true"/>

        <activity android:name=".activity.Lead.AddLeadActivity"
            android:exported="true"/>

        <activity android:name=".activity.Lead.NotesListActivity"
            android:exported="true"/>
        <activity android:name=".activity.Lead.AddNotesActivity"
            android:exported="true"/>

        <activity android:name=".activity.Lead.AddAttchmentsActivity"
            android:exported="true"/>
        <activity android:name=".activity.Lead.AttachmentsListActivity"
            android:exported="true"/>

        <activity android:name=".activity.Lead.CallsListActivity"
            android:exported="true"/>
        <activity android:name=".activity.Lead.AddCallLogsActivity"
            android:exported="true"/>
        <activity android:name=".activity.Lead.CallsDetailsActivity"
            android:exported="true"/>

        <activity android:name=".activity.Lead.MeetingsListActivity"
            android:exported="true"/>
        <activity android:name=".activity.Lead.AddMeetingsActivity"
            android:exported="true"/>
        <activity android:name=".activity.Lead.MeetingsDetailsActivity"
            android:exported="true"/>

        <activity android:name=".activity.Lead.AddTaskLogsActivity"
            android:exported="true"/>
        <activity android:name=".activity.Lead.TasksListActivity"
            android:exported="true"/>
        <activity android:name=".activity.Lead.TasksDetailsActivity"
            android:exported="true"/>

        <activity android:name=".activity.NBInquiry.AddNBActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden|adjustPan"/>

        <activity android:name=".activity.NBInquiry.InquiryListActivity"
            android:exported="true"/>
        <activity android:name=".activity.NBInquiry.InquiryEditActivity"
            android:exported="true"/>

        <activity android:name=".activity.Users.UsersListActivity"
            android:exported="true"/>
        <activity android:name=".activity.Users.AddUsersActivity"
            android:exported="true"/>
        <!-- filepicker -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.app.insurancevala"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider> <!-- Crop Image -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>