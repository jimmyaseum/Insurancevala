<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp">
        <shape>
            <solid android:color="@color/shadow_blue" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item android:bottom="5dp" android:right="1dp">
        <shape>
            <solid android:color="@color/button_blue" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>