<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout">

    <androidx.cardview.widget.CardView
        android:id="@+id/rlItemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:contentPadding="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFile"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/rose"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_border_color="@color/colorGradish"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txxtType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meetings"
                            android:textColor="@color/button_primary"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center_vertical" />
                        <TextView
                            android:id="@+id/txxtdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 Nov 2023"
                            android:textColor="@color/colorGray500"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/_10sdp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imgEdit"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_edit1"
                        android:layout_alignParentRight="true"/>
                    <ImageView
                        android:id="@+id/imgDelete"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/colorRed"
                        android:layout_alignParentRight="true"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txxtname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc.png"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
