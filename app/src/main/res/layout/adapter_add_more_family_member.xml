<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true"
                app:elevation="4dp">

                <LinearLayout
                    android:id="@+id/llContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/LLRelation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/txtRelation"
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorGray500"
                                android:text="Relation"
                                android:textSize="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppins_regular"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/edtRelation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textColorHint="@color/colorGray500"
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:clickable="true"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:drawableRight="@drawable/ic_down"
                                    android:drawableTint="@color/colorGray500"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/colorGradish"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LLInitial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/txtInitial"
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorGray500"
                                android:text="Initial"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_regular"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/edtInitialItem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textColorHint="@color/colorGray500"
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:clickable="true"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:drawableRight="@drawable/ic_down"
                                    android:drawableTint="@color/colorGray500"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/colorGradish"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LLFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/txtFirstName"
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorGray500"
                                android:text="First Name"
                                android:textSize="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppins_regular"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/edtFirstName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textColorHint="@color/colorGray500"
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:inputType="text"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/colorGradish"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LLLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/txtLastName"
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorGray500"
                                android:text="Last Name"
                                android:textSize="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppins_regular"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/edtLastName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textColorHint="@color/colorGray500"
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:inputType="text"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/colorGradish"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LLMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/txtMobileNo"
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorGray500"
                                android:text="Mobile No"
                                android:textSize="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppins_regular"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/edtMobileNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textColorHint="@color/colorGray500"
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:maxLength="10"
                                    android:inputType="number"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/colorGradish"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LLDateOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/txtDOB"
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorGray500"
                                android:text="Date of Birth"
                                android:textSize="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppins_regular"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/edtDOB"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textColorHint="@color/colorGray500"
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:clickable="true"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:drawableRight="@drawable/ic_down"
                                    android:drawableTint="@color/colorGray500"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/colorGradish"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAddMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:padding="@dimen/_6sdp"
                        android:text="Add More"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/poppins_bold"
                        android:visibility="gone"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_close_red_24dp"
            android:padding="@dimen/_2sdp" />
    </FrameLayout>
</LinearLayout>